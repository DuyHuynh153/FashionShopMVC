@model FashionShopMVC.Models.DTO.ProductDTO.CreateProductDTO
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title" style="font-size: 30px">Thêm sản phẩm mới</h3>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-5">
                    <label asp-for="Name">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" placeholder="Vui lòng nhập tên" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label asp-for="CategoryID">Danh mục</label>
                    <select asp-for="CategoryID" class="form-control" required>
                        <option value="">Chọn danh mục</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                
            </div>

            <div class="row">
                <div class="form-group col-3">
                    <label asp-for="PurchasePrice">Giá nhập (₫)</label>
                    <input asp-for="PurchasePrice" type="number" class="form-control" placeholder="Vui lòng nhập giá" required />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label asp-for="Price">Giá bán (₫)</label>
                    <input asp-for="Price" type="number" class="form-control" placeholder="Vui lòng nhập giá" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label asp-for="Discount">Giảm giá (%)</label>
                    <input asp-for="Discount" type="number" class="form-control" placeholder="Vui lòng nhập giảm giá" required />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label asp-for="Quantity">Số lượng</label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Vui lòng nhập số lượng" required />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Describe">Mô tả</label>
                <textarea asp-for="Describe" class="form-control" placeholder="Vui lòng nhập mô tả sản phẩm" required></textarea>
                <span asp-validation-for="Describe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Hình ảnh chính</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" required />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListImageFiles">Hình ảnh phụ</label>
                <input asp-for="ListImageFiles" type="file" multiple class="form-control" accept="image/*" />
                <span asp-validation-for="ListImageFiles" class="text-danger"></span>
            </div>

            <div class="form-group mb-0">
                <div class="custom-control custom-checkbox">
                    <input asp-for="Status" type="checkbox" class="custom-control-input" id="status" />
                    <label class="custom-control-label" for="status">Hiển thị</label>
                </div>
            </div>

            <!-- Hidden field for CreatedBy -->
            <input type="hidden" asp-for="CreatedBy" value="@ViewBag.CreatedBy" />
       
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a class="btn btn-default float-right" href="@Url.Action("Index", "Product")">Hủy</a>
        </div>
    </form>
</div>
<!-- /.card -->
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
