@using FashionShopMVC.Models.DTO.VoucherDTO;
@model CreateVoucherDTO;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <a asp-action="index" class="btn btn-info">
        <i class="fas fa-arrow-left"></i>
        Trờ lại danh sách
    </a>
</div>
<hr />
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title" style="font-size: 30px">Thêm mã giảm giá</h3>
    </div>

    <form method="post" name="frmAddVoucher" role="form">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-4">
                    <label for="DiscountCode">Mã giảm giá</label>
                    <input type="text" class="form-control" id="DiscountCode" placeholder="Vui lòng nhập mã giảm giá" required asp-for="@Model.DiscountCode" />
                    <span asp-validation-for="@Model.DiscountCode" class="text-danger"></span>
                </div>

                <div class="form-group col-4" style="text-align: center">
                    <label for="discounttype">Loại giảm giá</label>
                    <div class="form-check" style="cursor: pointer">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.DiscountAmount" style="cursor: pointer" id="DiscountAmount" />
                        <label class="form-check-label" for="DiscountAmount" style="cursor: pointer">
                            Giảm giá theo ₫
                        </label>
                    </div>
                    <div class="form-check" style="cursor: pointer">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.DiscountPercentage" style="cursor: pointer" id="DiscountPercentage" />
                        <label class="form-check-label" for="DiscountPercentage" style="cursor: pointer">
                            Giảm giá theo %
                        </label>
                    </div>
                </div>

                <div class="form-group col-4" id="discountAmountDiv" style="display: none;">
                    <label for="DiscountValue">Số tiền giảm ₫</label>
                    <input type="number" class="form-control" id="DiscountValue" placeholder="Vui lòng nhập số tiền giảm" required asp-for="@Model.DiscountValue" />
                    <span asp-validation-for="@Model.DiscountValue" class="text-danger"></span>
                </div>

                <div class="form-group col-4" id="discountPercentageDiv" style="display: none;">
                    <label for="DiscountValue">Phần trăm giảm %</label>
                    <input type="number" class="form-control" id="DiscountValue" placeholder="Vui lòng nhập phần trăm giảm" required asp-for="@Model.DiscountValue" />
                    <span asp-validation-for="@Model.DiscountValue" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-3">
                    <label for="MinimumValue">Giá trị tối thiểu của đơn hàng</label>
                    <input type="number" class="form-control" id="MinimumValue" placeholder="Vui lòng nhập giá trị tối thiểu của đơn hàng" required asp-for="@Model.MinimumValue" />
                    <span asp-validation-for="@Model.MinimumValue" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label for="Quantity">Số lượng</label>
                    <input type="number" class="form-control" id="Quantity" placeholder="Vui lòng nhập số lượng" required asp-for="@Model.Quantity" />
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label for="StartDate">Ngày bắt đầu</label>
                    <input type="datetime-local" class="form-control" id="StartDate" asp-for="@Model.StartDate" />
                    <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-3">
                    <label for="EndDate">Ngày kết thúc</label>
                    <input type="datetime-local" class="form-control" id="EndDate" asp-for="@Model.EndDate" />
                    <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="Describe">Mô tả</label>
                <textarea class="form-control" id="Describe" placeholder="Vui lòng nhập mô tả mã giảm giá" asp-for="@Model.Describe" style="height: 150px"></textarea>
            </div>

            <div class="form-group mb-0">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="Status" asp-for="@Model.Status" />
                    <label class="custom-control-label" style="cursor: pointer" for="Status">Có hiệu lực</label>
                    <span asp-validation-for="@Model.Status" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" class="custom-control-input" asp-for="@Model.CreatedBy" />
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a href="@Url.Action("Index", "Vouchers")" class="btn btn-default float-right">Hủy</a>
        </div>
    </form>
</div>
<!-- /.card -->

<script>
    // JavaScript để hiển thị/ẩn các trường dựa trên loại giảm giá
    document.getElementById('DiscountAmount').addEventListener('change', function () {
        if (this.checked) {
            document.getElementById('discountAmountDiv').style.display = 'block';
            document.getElementById('discountPercentageDiv').style.display = 'none';
            document.getElementById('DiscountPercentage').checked = false;
        } else {
            document.getElementById('discountAmountDiv').style.display = 'none';
        }
    });

    document.getElementById('DiscountPercentage').addEventListener('change', function () {
        if (this.checked) {
            document.getElementById('discountPercentageDiv').style.display = 'block';
            document.getElementById('discountAmountDiv').style.display = 'none';
            document.getElementById('DiscountAmount').checked = false;
        } else {
            document.getElementById('discountPercentageDiv').style.display = 'none';
        }
    });
</script>
