@using FashionShopMVC.Helper;
@using FashionShopMVC.Models.DTO.OrderDTO;
@model AdminPaginationSet<AdminGetOrderDTO>
@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px">Danh sách đơn hàng</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col col-md-2">
                <select name="category" class="form-control" id="category">
                    <option value="">Tất cả hình thức</option>
                    <option value="1">COD</option>
                    <option value="2">Chuyển khoản</option>
                </select>
            </div>

            <div class="col col-md-10">
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="searchByID" placeholder="Nhập mã đơn hàng..." />
                    <input type="text" class="form-control" id="searchByName" placeholder="Nhập tên người nhận hàng..." />
                    <input type="number" class="form-control" id="searchBySDT" placeholder="Nhập số điện thoại..." />
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="filterOrders()">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th style="width: 5%">ID</th>
                    <th style="width: 12%">Người nhận</th>
                    <th style="width: 8%">SĐT</th>
                    <th style="width: 20%">Địa chỉ</th>
                    <th style="width: 15%">Ngày đặt</th>
                    <th style="width: 10%">Đơn giá</th>
                    <th style="width: 10%">Hình thức</th>
                    <th style="width: 10%">Trạng thái</th>
                    <th style="width: 10%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.List)
                {
                    <tr>
                        <td>@order.ID</td>
                        <td>@order.FullName</td>
                        <td>@order.PhoneNumber</td>
                        <td>@order.Address</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@string.Format("{0:C}", order.TotalPayment)</td>
                        @if (order.TypePayment == 1)
                        {
                            <td>Tiền mặt</td>
                        }
                        else
                        {
                            <td>Chuyển khoản</td>
                        }
                        @if (order.Status == 1)
                        {
                            <td>Đã xử lý</td>
                        }
                        else
                        {
                            <td>Chưa xử lý</td>
                        }
                        <td>
                            <a href="@Url.Action("Details", "Orders", new { id = order.ID })" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("ExportToExcel", "Orders", new { id = order.ID })" class="btn btn-sm btn-success">
                                <i class="fas fa-download"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav class="mt-5">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PagesCount; i++)
                {
                    <li class="page-item @(Model.Page == i ? "active" : "")">
                        <a class="page-link" 
                            asp-action="Index" 
                            asp-route-page="@i" 
                            asp-route-pageSize="@Model.Page" 
                            asp-route-typePayment="@ViewBag.TypePayment" 
                            asp-route-searchByID="@ViewBag.SearchByID" 
                            asp-route-searchByName="@ViewBag.SearchByName" 
                            asp-route-searchBySDT="@ViewBag.SearchBySDT">
                        @i</a>
                    </li>
                }
            </ul>
        </nav>
        <!-- Phân trang -->
        @*
        @Html.Partial("_Pagination", Model.PaginationInfo)
        *@
    </div>
</div>

