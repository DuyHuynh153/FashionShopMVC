@using FashionShopMVC.Models.ViewModel;
@model StatisticViewModel;
<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="container-fluid">
                <section class="content-header">
                    <h1>Thống kê doanh thu</h1>
                </section>
                <div class="row">
                    <section class="col-lg-7">
                        <div class="card">
                             
                            <div class="card-body">
                                <canvas id="revenueChart" style="display: block; visibility: visible;"></canvas>
                            </div>
                        </div>
                    </section>

                    <section class="col-lg-5">
                        <div class="card">
                            <div class="card-header border-0">
                                <h3 class="card-tittle">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    Thống kê
                                </h3>
                            </div>

                            <div class="card-body">
                                <div id="world-map" style="height: 250px; width: 100%;">
                                    <table class="table table-bordered table-striped text-center">
                                        <thead>
                                            <tr class="bg-gradient-dark">
                                                <th>Ngày</th>
                                                <th>Doanh thu</th>
                                                <th>Lợi nhuận</th>
                                            </tr>
                                        </thead>

                                        <tbody>

                                            @foreach (var item in Model.listRevenueStatistic)
                                            {
                                                <tr>
                                                    <td>@item.Date</td>
                                                    <td>@item.Revenues</td>
                                                    <td>@item.Benefit</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </section>
                    </div>
            </div >
        </div >
    </div >
</section >

                
