@using FashionShopMVC.Models.DTO.UserDTO;
@using FashionShopMVC.Helper;
@model AdminPaginationSet<GetUserDTO>;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px">Danh sách khách hàng</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col col-md-10">
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="searchBySDT" placeholder="Nhập số điện thoại..." />
                    <input type="text" class="form-control" id="searchByEmail" placeholder="Nhập email..." />
                    <input type="text" class="form-control" id="searchByName" placeholder="Nhập tên khách hàng..." />
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="btnCustomersSearch">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loading" style="display: none;">
        <img src="~/assets/admin/img/spinner.gif" alt="Đang tải..." />
        <p>Đang tải dữ liệu...</p>
    </div>

    <!-- Khu vực chứa bảng và phân trang -->
    <div id="searchCustomerResults">
        @await Html.PartialAsync("_CustomerSearchResults", Model)
    </div>
</div>