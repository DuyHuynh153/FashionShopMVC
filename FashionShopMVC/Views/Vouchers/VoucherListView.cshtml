@using FashionShopMVC.Models.DTO.VoucherDTO;
@using System.Globalization;
@model List<GetVoucherDTO>
@{
    ViewData["Title"] = "VoucherListView"; 
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px">Danh sách mã giảm giá</h3>
        <button type="button" class="btn btn-info float-right" ui-sref="voucher_add">Thêm mã giảm giá</button>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th style="width: 2%">ID</th>
                    <th style="width: 15%">Mã giảm giá</th>
                    <th style="width: 10%">Giảm theo ₫</th>
                    <th style="width: 10%">Giảm theo %</th>
                    <th style="width: 10%">Giá trị giảm</th>
                    <th style="width: 2%">SL</th>
                    <th style="width: 13%">Ngày bắt đầu</th>
                    <th style="width: 13%">Ngày kết thúc</th>
                    <th style="width: 10%">Hiệu lực</th>
                    <th style="width: 15%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var voucher in Model)
                {
                    <tr>
                        <td>@voucher.id</td>
                        <td>@voucher.discountCode</td>
                        @if (voucher.discountAmount == true)
                        {
                            <td>
                                <i class="fa-solid fa-check btn-sm bg-success"></i>
                            </td>
                        }
                        @if (voucher.discountAmount == false)
                        {
                            <td>
                                
                            </td>
                        }
                        @if (voucher.discountPercentage == true)
                        {
                            <td>
                                <i class="fa-solid fa-check btn-sm bg-success"></i>
                            </td>
                        }
                        @if (voucher.discountPercentage == false)
                        {
                            <td>

                            </td>
                        }
                        @if (voucher.discountAmount == true)
                        {
                            <td>@String.Format("{0:C0}", @voucher.discountValue)</td>
                        }
                        @if (voucher.discountPercentage == true)
                        {
                            <td>@String.Format("%", @voucher.discountPercentage)</td>
                        }
                        
                        <td>@voucher.quantity</td>
                        <td>@String.Format("dd/MM/yy HH:mm", @voucher.startDate)</td>
                        <td>@voucher.endDate</td>
                        <td>
                            <span ng-class="{'badge bg-gradient-green': @voucher.status == true, 'badge bg-gradient-red': @voucher.status == false}" style="font-size: 14px">{{@voucher.status | lockFilter}}</span>
                        </td>
                        <td>
                             
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>