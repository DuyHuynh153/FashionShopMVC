@using FashionShopMVC.Models.DTO.ProductDTO;
@using System.Globalization;
@model List<GetProductDTO>
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="full-banner">
    <img src="~/assets/customer/images/imgTrangChu2.jpg" style="max-width: 100%" />
</div>

<div class="main-content">
    <div class="container">
        <div class="row featured-block">
            <div class="main-head-block">
                <h2 id="product-section">Danh sách sản phẩm</h2>
            </div>
            <div id="product-list">
                @Html.Partial("_ProductListPartial", Model)

            </div>
        </div>
    </div>
</div>
<script>
    function attachPaginationEventListeners() {
        const paginationLinks = document.querySelectorAll('.pagination-link');
        paginationLinks.forEach(link => {
            link.addEventListener('click', function (event) {
                event.preventDefault();
                const url = this.href;
                fetch(url, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('product-list').innerHTML = html;
                        document.getElementById("product-section").scrollIntoView({ behavior: 'smooth' });
                        attachPaginationEventListeners(); // Re-attach event listeners after content is loaded
                    });
            });
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        attachPaginationEventListeners();
    });
</script>
<script>
    $(document).ready(function () {
        $('.btnAddProductFavorite').click(function () {
            var productId = $(this).data('id');
            $.ajax({
                url: '@Url.Action("AddToFavorite", "Home")',
                type: 'POST',
                data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                        alert('Product added to favorites!');
                    } else {
                        alert('Failed to add product to favorites.');
                    }
                },
                error: function () {
                    alert('Error occurred while adding product to favorites.');
                }
            });
        });
    });
</script>